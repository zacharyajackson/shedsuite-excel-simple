{
  "name": "shedsuite-supabase-sync",
  "version": "1.0.0",
  "description": "ShedSuite to Supabase data synchronization service",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --no-colors src/index.js",
    "railway:start": "node src/index.js",
    "railway:health": "curl -f http://localhost:${PORT:-3001}/health || exit 1",
    "railway:deploy": "./scripts/deploy-railway.sh",
    "railway:logs": "./scripts/monitor-logs.sh",
    "health:check": "./scripts/health-check.sh",
    "health:monitor": "./scripts/health-check.sh check",
    "test": "NODE_ENV=test jest",
    "test:unit": "NODE_ENV=test jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:integration": "NODE_ENV=test jest --testMatch='**/tests/integration/**/*.test.js'",
    "test:e2e": "NODE_ENV=test jest --testMatch='**/tests/e2e/**/*.test.js'",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "setup-db": "node scripts/setup-database.js",
    "migrate": "node scripts/migrate.js",
    "health-check": "curl -f http://localhost:${PORT:-3001}/health || exit 1",
    "sync:manual": "curl -X POST http://localhost:${PORT:-3001}/api/sync/trigger",
    "sync:status": "curl http://localhost:${PORT:-3001}/api/sync/status",
    "export:csv": "node scripts/export-csv.js",
    "export:csv:all": "node scripts/export-csv.js all",
    "export:csv:today": "node scripts/export-csv.js today",
    "export:csv:week": "node scripts/export-csv.js thisWeek",
    "export:csv:month": "node scripts/export-csv.js thisMonth",
    "export:csv:summary": "node scripts/export-csv.js summary",
    "docker:build": "docker build -t shedsuite-supabase-sync .",
    "docker:run": "docker run -p 3001:3001 shedsuite-supabase-sync"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "shedsuite",
    "supabase",
    "data-sync",
    "api-integration",
    "real-time-sync"
  ],
  "author": "ShedSuite Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/shedsuite-supabase-sync.git"
  }
}
