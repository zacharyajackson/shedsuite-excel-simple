# ShedSuite API Configuration
API_BASE_URL=https://app.shedsuite.com
API_TOKEN=your_shedsuite_api_token_here
API_PATH=api/public
API_ENDPOINT=customer-orders/v1

# Microsoft Azure Configuration
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_TENANT_ID=your_azure_tenant_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
EXCEL_WORKBOOK_ID=your_excel_workbook_id_here
EXCEL_WORKSHEET_NAME=Sheet1

# SharePoint Configuration
SHAREPOINT_HOSTNAME=yourdomain.sharepoint.com
SHAREPOINT_SITE_PATH=/sites/YourSite

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
LOG_FORMAT=text
SKIP_INITIAL_SYNC=false

# Monitoring Configuration
ENABLE_MONITORING=true
POLLING_INTERVAL=300000
CRON_SCHEDULE=*/5 * * * *
FULL_SYNC_INTERVAL=24
ENABLE_PERFORMANCE_LOGGING=false
HEALTH_CHECK_INTERVAL_MS=300000
METRICS_EXPORT_INTERVAL_MS=60000

# API Configuration
PAGE_SIZE=100
MAX_PAGES=1000
SORT_BY=id
SORT_ORDER=asc
API_TIMEOUT=60000
API_MAX_RETRIES=3
API_RETRY_DELAY=1000
MAX_CONCURRENT_REQUESTS=3
INITIAL_SYNC_LIMIT=200000

# Error Handling
API_CIRCUIT_BREAKER_THRESHOLD=5
API_CIRCUIT_BREAKER_TIMEOUT=60000
API_CIRCUIT_BREAKER_MONITORING=10000
API_MAX_RETRY_DELAY=30000
API_BACKOFF_MULTIPLIER=2
API_JITTER_ENABLED=true

# Graceful Shutdown
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# CORS Configuration
ALLOWED_ORIGINS=* 